          "risk_enable_night_holding": {
            "type": "bool", "value": true,
            "desc": {"en": "Enable holding positions overnight",
              "zh": "允许夜间持仓"},
            "required": false,
            "script_settings": true
          },
          "risk_enable_weekend_holding": {
            "type": "bool", "value": false,
